<%- model_class = Fix -%>
<div class="page-header">
  <h1><%=t '.title', :default => Fix %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:customer_id) %></dt>
      <dd><pre class="prettyprint"><%= @fix.customer_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address_id) %></dt>
      <dd><pre class="prettyprint"><%= @fix.address_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:category_id) %></dt>
      <dd><pre class="prettyprint"><%= @fix.category_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              fixes_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_fix_path(@fix), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              fix_path(@fix),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

