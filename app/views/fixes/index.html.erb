<h1>Listing fixes</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Address</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fixes.each do |fix| %>
      <tr>
        <td><%= fix.customer_id %></td>
        <td><%= fix.address_id %></td>
        <td><%= fix.category_id %></td>
        <td><%= link_to 'Show', fix %></td>
        <td><%= link_to 'Edit', edit_fix_path(fix) %></td>
        <td><%= link_to 'Destroy', fix, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fix', new_fix_path %>
